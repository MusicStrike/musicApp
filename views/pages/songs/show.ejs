<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/styles/style.css" type="text/css">
    <script src="https://kit.fontawesome.com/a177902e94.js" crossorigin="anonymous"></script>
    <!-- <link href="/styles/base.css" rel="stylesheet" type="text/css" />
    <link href="/styles/layout.css" rel="stylesheet" type="text/css" />
    <link href="/styles/modules.css" rel="stylesheet" type="text/css" /> -->
    <title>Music Striks</title>
</head>

<body>
    <header>
        <a href="/">
            <h1>My list</h1>
        </a>
        <a href="#"><i class="fab fa-facebook-f"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
    </header>
    <section id="shown" style="background-color: red;">
        <ul>
            <% songs.forEach(song => { %>
            <li>
                <span style="display: none;"><%= song.id %></span>
                <h2 class="title"><%= song.title %></h2>
                <!-- <h2 class="singer"><%= song.artist %></h2> -->
                <img src='<%= song.album_cover_image %>'>
                <audio controls>
                    <source src="<%= song.preview_mp3 %>" type="audio/mpeg">
                </audio>
                <h3 class="album"><%= song.album_title%></h3>
                <!-- <form action="/song/<%= song.id%>" method="GET"> -->
                <button id="updateclick"> update </button>
                <form action="/delete/<%= song.id %>" method="get">
                    <button type="submit"> delete </buttontype="submit">
                </form>
            </li>
            <% }) %>
        </ul>
    </section>
    <section id="hiddenform">
        <ul>
            <% songs.forEach(song => { %>
            <form action="/update/<%= song.id %>" method="get">
                <input class="hidden" type="text" name="id" value="<%= song.id %>">
                <input class="hidden" type="text" name="title" value="<%= song.title %>">
                <input class="hidden" type="text" name="album_cover_image" id="album_cover_image"
                    value="<%= song.album_cover_image %>">
                <input class="hidden" type="text" name="artistName" id="artistName" value="<%= song.artistNameb %>">
                <input class="hidden" type="text" name="preview_mp3" id="preview" value="<%= song.preview_mp3 %>">
                <input class="hidden" type="text" name="album_title" id="album_title" value="<%= song.album_title %>">
                <button type="submit"> update </button>
            </form>
            <form action="/delete/<%= song.id %>" method="get">
                <button type="submit"> delete </button>
            </form>
            <% }) %>
        </ul>
    </section>
    <script>
        document.getElementById('updateclick').onclick = function () { myFunction2(); };
        function myFunction2() {
            alert('update');
            document.getElementById('hiddenform').style.display = 'block';
            document.getElementById('shown').style.display = 'none';
        }
    </script>
</body>

</html>